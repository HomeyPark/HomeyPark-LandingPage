    <div class="max-w-5xl mx-auto flex gap-20">
      <div class="w-full">
        <h3 class="text-2xl font-bold rubik text-[#55AA87] mb-6">Drivers</h3>
        <ul class="space-y-10">
          {
            driverPricingItems.map((item) => (
              <li class="flex items-center">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-[72px] h-[72px] mr-3"
                />
                <div>
                  <h4 class="text-lg font-bold text-[#525252]">{item.title}</h4>
                  <p class="text-[#525252]">{item.description}</p>
                </div>
              </li>
            ))
          }
