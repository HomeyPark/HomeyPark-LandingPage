        <h3 class="text-2xl font-extrabold text-[#55AA87] mb-6">Hosts</h3>
        <ul class="space-y-10">
          {
            hostPricingItems.map((item) => (
              <li class="flex items-center">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-[72px] h-[72px] mr-3"
                />
                <div>
